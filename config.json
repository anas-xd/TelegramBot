{
  // ============================================================
  // BASIC BOT INFO
  // ============================================================
  "botname": "MKBot",            // Display name of your bot
  "prefix": "/",                 // Command prefix (ex: /help)

  // ============================================================
  // PRIVILEGED USERS (Owner + Admins merged)
  // Add all user IDs who can use admin commands
  // ============================================================
  "privilegedUsers": [
    "10001",                     // Owner
    "10002"                      // Admin (add more if needed)
  ],

  // ============================================================
  // OWNER INFO (Used in lang file & system messages)
  // ============================================================
  "owner": {
    "id": "10001",
    "name": "Your Name",
    "contact": "@yourTelegram"
  },

  // ============================================================
  // BOT SETTINGS
  // ============================================================
  "language": "en",               // Default language
  "timezone": "Asia/Kolkata",     // Bot timezone
  "debug": false,                 // Enable logs for debugging

  // ============================================================
  // REACTION SYSTEM (Icons for bot status)
  // ============================================================
  "reactions": {
    "enabled": true,              // Turn on/off reactions
    "processing": "⏳",
    "success": "✅",
    "error": "❌"
  },

  // ============================================================
  // CONNECTION SETTINGS
  // Only one will be used based on your hosting:
  // - localhost or railway → polling
  // - vercel or render → webhook
  // ============================================================
  "connection": {
    "mode": "auto",               // "auto" | "polling" | "webhook"

    // (Webhook only)
    "webhookDomain": "",          // Example: "https://your-app.onrender.com"
    "webhookPath": "/webhook",    // Endpoint for updates
    "webhookPort": 3000           // Port for express server
  }
}